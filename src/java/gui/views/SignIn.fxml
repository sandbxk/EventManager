<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPaneRoot" prefHeight="750.0" prefWidth="1000.0" styleClass="background" stylesheets="@../styles/mainStylesheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.SignInController">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <TextField fx:id="usernameField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="433.0" promptText="username" />
         <TextField fx:id="passwordField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="440.0" promptText="password">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </TextField>
         <Button fx:id="loginSubmitBtn" alignment="CENTER" mnemonicParsing="false" onAction="#onLogin" text="Submit">
            <VBox.margin>
               <Insets top="100.0" />
            </VBox.margin></Button>
      </VBox>
   </center>
</BorderPane>
